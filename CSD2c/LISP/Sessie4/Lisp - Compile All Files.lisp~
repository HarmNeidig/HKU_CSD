iled-Files-MainDir* (concatenate 'string *User-Dir* "Lisp compiled XFASL files/"))  ;; main directory for all compiled XFASL files.(defvar *Files-MainDir* (concatenate 'string *User-Dir* "Lisp files/"))                          ;; main directory of all lisp program files.(compile-file (concatenate 'string *Files-MainDir* "simple-function+list.lisp")  ;; file 1              :output-file *Compiled-Files-MainDir*              :verbose t)(incf *NumOfFilesCompiled*)(compile-file (concatenate 'string *Files-MainDir* "array-lists.lisp")           ;; file 2              :output-file *Compiled-Files-MainDir*              :verbose t)(incf *NumOfFilesCompiled*)(compile-file (concatenate 'string *Files-MainDir* "conditions-if.lisp")         ;; file 3 ... etc.!              :output-file *Compiled-Files-MainDir*              :verbose t) (incf *NumOfFilesCompiled*);;; *******************************************************************************************;;; *******************************************************************************************;;; *******************************************************************************************(format nil "~%~%")(format nil "****************************************************")(format nil "***** Lisp                                    *****")(format nil "***** Now Compiling All available files        *****")(format nil "***** Compiled files: ~10D             *****" *NumOfFilesCompiled*)(format nil "****************************************************")(format nil "~%~%")(terpri)(room 'nil);;;; *****************************************************************************************************************************